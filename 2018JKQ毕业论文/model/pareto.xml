		<declaration>clock dt,r; // temporary clock

void cool()
{
   r = bvec[id]*(u+-T[id]) * 1.0/scale;
   for(j:rid_t)
      r = r + Amat[id][j]*(T[j]+ -T[id]) * 1.0/scale;
   T[id] = T[id] + r * dt;
   dt = 0;
}

//when turnon, the change of temperature increaing
void heat()
{
   r = (cvec[id]*h[id] + bvec[id]*(u+-T[id])) *1.0/scale;
   for(j:rid_t)
     r = r + Amat[id][j]*(T[j]+ -T[id]) * 1.0/scale;
   T[id] = T[id] + r * dt;
   dt = 0;
}
